<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="@android:color/holo_blue_bright" />

            <gradient android:angle="-90" android:startColor="@android:color/holo_blue_bright" android:endColor="@android:color/holo_blue_bright"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#ff33b5e5" />
            <solid android:color="#ff33b5e5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >


            <stroke android:width="1px" android:color="@android:color/holo_blue_bright" />
            <gradient android:angle="-90" android:startColor="#FFFFFF" android:endColor="#FFFFFF" />
        </shape>
    </item>
</selector>