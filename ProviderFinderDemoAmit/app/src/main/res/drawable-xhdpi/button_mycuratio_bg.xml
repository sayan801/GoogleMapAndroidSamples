<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#54d66A" />
            <stroke
                android:width="1dp"
                android:color="#43AB55" />
            <corners
                android:radius="2dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#54d66A"
                android:endColor="#43AB55"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#43AB55" />
            <corners
                android:radius="2dp" />

        </shape>
    </item>
</selector>