<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <Button
            android:id="@+id/ButtonAddMyProvider"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:text="@string/addToMyProvider"

            android:clickable="true"
            android:textSize="15sp"
            android:onClick="AddProvider"
            android:layout_marginTop="2dp"
           />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="@string/providerSpecialities"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/specialityDetails"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text=""
                android:textColor="@android:color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="@string/providerEducation"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/educationDetails"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text=""
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:paddingLeft="15dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/providerHistory"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Information not found"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
