<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/searchDescription"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".10"
        android:textSize="17sp"
        android:gravity="center"
        android:singleLine="false"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="1.75sp"
        android:visibility="visible"
        android:enabled="false"
        />
    <TextView
        android:id="@+id/searchDescriptionALL"

        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".15"
        android:textSize="17sp"
        android:gravity="center"
        android:singleLine="false"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="1.75sp"
        android:visibility="gone"
        />
    <com.app.mycuratioui.SlidingDrawer xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        tools:context="com.app.mycuratioui.SlidingDrawer" />

</LinearLayout>