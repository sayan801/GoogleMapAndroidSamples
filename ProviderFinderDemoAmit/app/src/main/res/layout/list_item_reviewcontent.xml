<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:id="@+id/reviewLinearLayout"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@android:color/white"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Male, 24, Jan 6th, 2014"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/textViewTitle "
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="The Best Service I Ever Had..."
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <RatingBar
                    android:id="@+id/showRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/overallRatingBar"
                    android:numStars="5"
                    android:stepSize="3"
                    android:gravity="right"
                    android:isIndicator="true"
                    />

                </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layoutReview"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
            android:text="I am the alpha and the womega I am the alpha and the womegaI am the alpha and the womegaI am the alpha and the womega"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/textViewShowhide"
            android:textSize="14dp"
            android:textColor="@android:color/black"
            />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:visibility="invisible"
                />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:background="#eaeaea"
                    >
                    <TextView
                        android:id="@+id/TxtTimeliness"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Timeliness"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        />
                    <RatingBar
                        android:id="@+id/showRatingBar1"
                        android:layout_width="145dp"
                        android:layout_height="match_parent"
                        android:background="#eaeaea"
                        style="@style/overallRatingBar"
                        android:numStars="5"
                        android:stepSize="3"
                        android:gravity="right"
                        android:isIndicator="true"
                        />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Friendliness"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        />
                    <RatingBar
                        android:id="@+id/showRatingBar2"
                        android:layout_width="145dp"
                        android:layout_height="match_parent"

                        style="@style/overallRatingBar"
                        android:numStars="5"
                        android:stepSize="3"
                        android:gravity="right"
                        android:isIndicator="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:background="#eaeaea"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Professionalism"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        />
                    <RatingBar
                        android:id="@+id/showRatingBar3"
                        android:layout_width="145dp"
                        android:layout_height="match_parent"

                        style="@style/overallRatingBar"
                        android:numStars="5"
                        android:stepSize="3"
                        android:gravity="right"
                        android:isIndicator="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Price"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        />
                    <RatingBar
                        android:id="@+id/showRatingBar4"
                        android:layout_width="145dp"
                        android:layout_height="match_parent"

                        style="@style/overallRatingBar"
                        android:numStars="5"
                        android:stepSize="3"
                        android:gravity="right"
                        android:isIndicator="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:background="#eaeaea"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Facilities"
                        android:textColor="@android:color/black"
                        android:layout_gravity="left"
                        />
                    <RatingBar
                        android:id="@+id/showRatingBar5"
                        android:layout_width="145dp"
                        android:layout_height="match_parent"

                        style="@style/overallRatingBar"
                        android:numStars="5"
                        android:stepSize="3"
                        android:gravity="right"
                        android:isIndicator="true"
                        />
                </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@android:color/white"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>