<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="0dip" android:color="#ffffff" />

            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#ffffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="0dip" android:color="#54D66A" />
            <solid android:color="#54D66A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="0px" android:color="#ffffff" />
            <gradient android:angle="-90" android:startColor="#54D66A" android:endColor="#54D66A" />
        </shape>
    </item>
</selector>
    