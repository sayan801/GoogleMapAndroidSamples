<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapProviderSearchResult"
            tools:context="com.amiyo.technicise.androidcustomprogress.SlidingDrawer"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <LinearLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:orientation="vertical"
            >
            <FrameLayout
                android:id="@+id/drawer_bar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#54D66A"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/TextNoOfResults"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/slidingImg"
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:layout_marginTop="9dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/closeicon"
                        android:layout_weight=".1"
                        />
                </LinearLayout>

            </FrameLayout>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:background="@android:color/white"
                android:scrollbarStyle="outsideOverlay"
                android:choiceMode="singleChoice"
                />

        </LinearLayout>

    </FrameLayout>

</merge>